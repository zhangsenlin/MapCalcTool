<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_query_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.qiang.collect.QueryFileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/upload_activity_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/img_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="文件列表"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">



            <TextView
                android:id="@+id/upload_file_ensure_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/image11"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/upload_file_ensure_btn"/>
            <TextView
                android:id="@+id/upload_file_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/image11"
                android:clickable="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/upload_file_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>

